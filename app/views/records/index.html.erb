
<div class="container-fluid">

  <div class="row" style="margin-top:0px;">

    <div class="col-md-2" style="background-color:#720000;height:80vh">
      <div class="row">
        <div class="col-sm-12" style="color:white;margin-top:10px;">
          <h6 class="text-center"><%= link_to "Add a new Record", new_record_path, :class => "btn btn-sm btn-default" %></h6>
          <hr>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12" style="color:white;">
          <h6 class="text-center">Topics (entries)</h6>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <ul style="list-style-type:none; margin-left:65px; padding-left:0px;margin-left:25px;">
            <% @topics.each do |t| %>
              <li><%= link_to t.name+" ("+t.tags.count.to_s+")", topic_path(t.id), :class => "topic-link" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-9">
      <div style="margin-left:30px; margin-top:30px;">
      <ul class="nav nav-tabs nav-justified" style="margin-left:0px;margin-top:10px;">
        <li class="active"><a data-toggle="tab" href="#recently_added">Recently Added</a></li>
        <li><a data-toggle="tab" href="#recently_viewed">Recently Viewed</a></li>
        <li><a data-toggle="tab" href="#most_viewed">Most Viewed</a></li>
      </ul>
      <div class="tab-content">
        <div id="recently_added" class="tab-pane fade in active record-list-div">
          <ul style="list-style-type:none; padding-left:5px;">
            <br>
            <% @recently_added.each do |ra| %>
              <li class="record-list-li"><%= link_to ra.created_at.strftime('%b %d, %y')+' > '+ra.title, record_path(ra.id), :class=>"list-item-link" %><br>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <% ra.topics.each do |ratop| %>
                  <%= link_to ratop.name+' ', topic_path(ratop.id), :class=>"btn btn-xs btn-tag" %>&nbsp;
                <% end %>
              </li>
              <hr>
            <% end %>
          </ul>
        </div>
        <div id="recently_viewed" class="tab-pane fade in record-list-div">
          <ul style="list-style-type:none; padding-left:5px;">
            <br>
            <% @recently_viewed.each do |rv| %>
              <li class="record-list-li"><%= link_to rv.updated_at.strftime('%b %d, %y')+' > '+rv.title, record_path(rv.id), :class=>"list-item-link" %><br>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <% rv.topics.each do |rvtop| %>
                  <%= link_to rvtop.name+' ', topic_path(rvtop.id), :class=>"btn btn-xs btn-tag" %>&nbsp;
                <% end %>
                <hr>
              </li>
            <% end %>
          </ul>
        </div>
        <div id="most_viewed" class="tab-pane fade in record-list-div">
          <ul style="list-style-type:none; padding-left:5px;">
            <br>
            <% @most_viewed.each do |mv| %>
              <li class="record-list-li"><%= link_to mv.times_viewed.to_s+' > '+mv.title, record_path(mv.id), :class=>"list-item-link" %><br>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <% mv.topics.each do |mvtop| %>
                  <%= link_to mvtop.name+' ', topic_path(mvtop.id), :class=>"btn btn-xs btn-tag" %>&nbsp;
                <% end %>
                <hr>
              </li>
            <% end %>
          </ul>
        </div>

      </div> <!-- close tab-content div -->
    </div>
    </div> <!-- close list-div -->

  </div> <!-- close row -->

</div> <!-- close container -->
