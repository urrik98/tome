<p id="notice"><%= notice %></p>
<div class="container">

  <div class="row">
    <div class="col-sm-3 col-sm-offset-1">
      <input class="form-control" type="search" placeholder="search for a record" />
    </div>
    <div class="col-sm-3 col-sm-offset-1">
      <%= link_to "Create a new record", new_record_path, :class =>"btn btn-sm btn-success" %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-sm-2 col-sm-offset-1">
      <h6>Most frequently viewed</h6>
    </div>
    <div class="col-sm-2 col-sm-offset-1">
      <h6>Recently viewed</h6>
    </div>
    <div class="col-sm-2 col-sm-offset-1">
      <h6>Recently added</h6>
      <ul style="list-style-type:none; padding:0;">
        <% @recently_added.each do |ra| %>
          <li><%= link_to ra.title, record_path(ra.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>


</div>










